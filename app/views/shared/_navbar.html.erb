<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <h1><strong>Tennis</strong>match <img src="https://img.icons8.com/pastel-glyph/64/000000/tennis-ball--v2.png"/></h1>

  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <div class="pr-3">
          <%= link_to "Challenge someone", new_request_path, class: "nav-link btn" %>
        </div>
      </li>
      <% if user_signed_in? == false %>
      <li class="nav-item active">
        <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>

      <% if current_user %>
        <li class="nav-item dropdown">
          <% if current_user.photo %>
            <%= image_tag "#{current_user.photo}", width: 40, height: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "avatar_man.svg", width: 40, height: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", request_matches_path(:request_id), class: "dropdown-item" %>
            <%= link_to "Account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>

    </ul>
  </div>
</div>
